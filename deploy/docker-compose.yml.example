# AudiFi Docker Compose - Development/Local Environment
# 
# This file provides a local development environment for AudiFi.
# For production, use container orchestration (Docker Swarm, Kubernetes)
# or a managed container platform.
#
# Usage:
#   docker compose up -d         # Start all services
#   docker compose logs -f       # View logs
#   docker compose down          # Stop all services
#
# Required: Create a .env file with the variables below

version: '3.8'

services:
  # =============================================================================
  # REVERSE PROXY
  # =============================================================================
  caddy:
    image: caddy:2-alpine
    container_name: audifi-caddy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
    networks:
      - audifi-network
    depends_on:
      - api-server
      - ws-server

  # =============================================================================
  # APPLICATION SERVICES
  # =============================================================================
  api-server:
    build:
      context: ../
      dockerfile: deploy/Dockerfile.api
    container_name: audifi-api
    restart: unless-stopped
    environment:
      - NODE_ENV=production
      - PORT=3000
      - DATABASE_URL=${DATABASE_URL}
      - REDIS_URL=redis://redis:6379
      - JWT_SECRET=${JWT_SECRET}
      - STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
      - STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
      - ETHEREUM_RPC_URL=${ETHEREUM_RPC_URL}
      - BASE_RPC_URL=${BASE_RPC_URL}
      - RESEND_API_KEY=${RESEND_API_KEY}
      - EMAIL_FROM=${EMAIL_FROM}
    expose:
      - "3000"
    networks:
      - audifi-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  ws-server:
    build:
      context: ../
      dockerfile: deploy/Dockerfile.ws
    container_name: audifi-ws
    restart: unless-stopped
    environment:
      - NODE_ENV=production
      - PORT=3001
      - REDIS_URL=redis://redis:6379
      - JWT_SECRET=${JWT_SECRET}
    expose:
      - "3001"
    networks:
      - audifi-network
    depends_on:
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s

  worker:
    build:
      context: ../
      dockerfile: deploy/Dockerfile.worker
    container_name: audifi-worker
    restart: unless-stopped
    environment:
      - NODE_ENV=production
      - DATABASE_URL=${DATABASE_URL}
      - REDIS_URL=redis://redis:6379
      - ETHEREUM_RPC_URL=${ETHEREUM_RPC_URL}
      - BASE_RPC_URL=${BASE_RPC_URL}
      - TWITCH_CLIENT_ID=${TWITCH_CLIENT_ID}
      - TWITCH_CLIENT_SECRET=${TWITCH_CLIENT_SECRET}
      - YOUTUBE_API_KEY=${YOUTUBE_API_KEY}
      - DISCORD_BOT_TOKEN=${DISCORD_BOT_TOKEN}
    networks:
      - audifi-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy

  # =============================================================================
  # DATA STORES
  # =============================================================================
  postgres:
    image: postgres:16-alpine
    container_name: audifi-postgres
    restart: unless-stopped
    environment:
      - POSTGRES_USER=${POSTGRES_USER:-audifi}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
      - POSTGRES_DB=${POSTGRES_DB:-audifi}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-db.sql:/docker-entrypoint-initdb.d/init.sql:ro
    expose:
      - "5432"
    networks:
      - audifi-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-audifi} -d ${POSTGRES_DB:-audifi}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s

  redis:
    image: redis:7-alpine
    container_name: audifi-redis
    restart: unless-stopped
    command: redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru
    volumes:
      - redis_data:/data
    expose:
      - "6379"
    networks:
      - audifi-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  # =============================================================================
  # OBSERVABILITY (Optional - Comment out for minimal setup)
  # =============================================================================
  prometheus:
    image: prom/prometheus:v2.47.0
    container_name: audifi-prometheus
    restart: unless-stopped
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus_data:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time=15d'
    expose:
      - "9090"
    networks:
      - audifi-network

  grafana:
    image: grafana/grafana:10.2.0
    container_name: audifi-grafana
    restart: unless-stopped
    environment:
      - GF_SECURITY_ADMIN_USER=${GRAFANA_ADMIN_USER:-admin}
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
      - GF_USERS_ALLOW_SIGN_UP=false
    volumes:
      - grafana_data:/var/lib/grafana
      - ./grafana/provisioning:/etc/grafana/provisioning:ro
    expose:
      - "3000"
    networks:
      - audifi-network
    depends_on:
      - prometheus

  # =============================================================================
  # EXPORTERS (for observability)
  # =============================================================================
  postgres-exporter:
    image: prometheuscommunity/postgres-exporter:v0.15.0
    container_name: audifi-postgres-exporter
    restart: unless-stopped
    environment:
      - DATA_SOURCE_NAME=postgresql://${POSTGRES_USER:-audifi}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB:-audifi}?sslmode=disable
    expose:
      - "9187"
    networks:
      - audifi-network
    depends_on:
      postgres:
        condition: service_healthy

  redis-exporter:
    image: oliver006/redis_exporter:v1.55.0
    container_name: audifi-redis-exporter
    restart: unless-stopped
    environment:
      - REDIS_ADDR=redis://redis:6379
    expose:
      - "9121"
    networks:
      - audifi-network
    depends_on:
      redis:
        condition: service_healthy

# =============================================================================
# VOLUMES
# =============================================================================
volumes:
  postgres_data:
    driver: local
  redis_data:
    driver: local
  caddy_data:
    driver: local
  caddy_config:
    driver: local
  prometheus_data:
    driver: local
  grafana_data:
    driver: local

# =============================================================================
# NETWORKS
# =============================================================================
networks:
  audifi-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.28.0.0/16
