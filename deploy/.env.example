# =============================================================================
# AudiFi Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=audifi
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=audifi
DATABASE_URL=postgresql://audifi:your_secure_password_here@postgres:5432/audifi

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
SESSION_SECRET=your_very_long_and_secure_session_secret_here

# =============================================================================
# STRIPE
# =============================================================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Test mode (development)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# BLOCKCHAIN RPC
# =============================================================================
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key

# Base (L2) - Primary deployment chain
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your_api_key

# Polygon (alternative L2)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key

# Solana (if enabled)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_api_key

# Testnets (development/staging)
# ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key
# BASE_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_api_key

# =============================================================================
# EMAIL
# =============================================================================
# Resend (recommended)
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@audifi.io

# SendGrid (alternative)
# SENDGRID_API_KEY=SG....

# =============================================================================
# OAUTH / SSO
# =============================================================================
# Google
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...
GOOGLE_REDIRECT_URI=https://app.audifi.io/auth/callback/google

# Microsoft (optional)
# MICROSOFT_CLIENT_ID=...
# MICROSOFT_CLIENT_SECRET=...
# MICROSOFT_REDIRECT_URI=https://app.audifi.io/auth/callback/microsoft

# =============================================================================
# STREAMING PLATFORMS (V Studio)
# =============================================================================
# Twitch
TWITCH_CLIENT_ID=...
TWITCH_CLIENT_SECRET=...
TWITCH_REDIRECT_URI=https://app.audifi.io/auth/callback/twitch

# YouTube
YOUTUBE_API_KEY=AIza...
YOUTUBE_CLIENT_ID=...
YOUTUBE_CLIENT_SECRET=...

# Discord
DISCORD_BOT_TOKEN=...
DISCORD_CLIENT_ID=...
DISCORD_CLIENT_SECRET=...
DISCORD_GUILD_ID=...

# TikTok (requires partnership approval)
# TIKTOK_CLIENT_KEY=...
# TIKTOK_CLIENT_SECRET=...

# =============================================================================
# OBSERVABILITY
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# External monitoring (optional)
# SENTRY_DSN=https://...@sentry.io/...
# DATADOG_API_KEY=...

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VSTUDIO=true
ENABLE_SOLANA=false
ENABLE_POLYGON=true

# =============================================================================
# FRONTEND (Vite)
# =============================================================================
VITE_API_URL=https://api.audifi.io
VITE_WS_URL=wss://api.audifi.io/ws
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...
