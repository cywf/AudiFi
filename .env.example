# ================================
# AudiFi Environment Configuration
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# ===== Application =====
NODE_ENV=development
PORT=3000

# ===== Frontend (VITE_* variables are public) =====
VITE_API_URL=http://localhost:3000/api
VITE_APP_ENV=development
VITE_ENABLE_ANALYTICS=false

# Blockchain Configuration
VITE_CHAIN_ID=1
VITE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_MASTER_IPO_CONTRACT=0x0000000000000000000000000000000000000000

# Error Tracking (public DSN only)
VITE_SENTRY_DSN=

# ===== Database =====
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/audifi_dev
REDIS_URL=redis://localhost:6379

# ===== Authentication =====
JWT_SECRET=your-development-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# OAuth Providers (optional for local development)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===== Payments (Stripe) =====
# Use Stripe test keys for development
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===== Blockchain =====
# Use testnet endpoints for development
BLOCKCHAIN_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
BLOCKCHAIN_PRIVATE_KEY=

# Artist Coin Configuration
ARTIST_COIN_CONTRACT=0x0000000000000000000000000000000000000000
LIQUIDITY_POOL_ADDRESS=0x0000000000000000000000000000000000000000

# ===== External Services =====
# Email (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@audifi.io

# SMS/2FA (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# IPFS (Pinata or similar)
IPFS_API_KEY=
IPFS_API_SECRET=
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# ===== Monitoring =====
# Backend error tracking
SENTRY_DSN=

# Logging
LOG_LEVEL=debug

# ===== V Studio =====
VSTUDIO_SESSION_TIMEOUT=3600
VSTUDIO_MAX_PARTICIPANTS=50

# ===== Master IPO =====
MASTERIPO_MIN_SHARES=100
MASTERIPO_MAX_SHARES=1000000
MASTERIPO_DEFAULT_ROYALTY=0.10

# ===== CORS =====
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
