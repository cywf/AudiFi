# AudiFi Local Environment Example
# Copy this file to .env and update values as needed

# =================================================
# DATABASE CONFIGURATION
# =================================================

# Primary PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
AUDIFI_DATABASE_URL=postgresql://audifi:audifi_dev_password@localhost:5432/audifi_dev

# Connection pool settings
AUDIFI_DB_POOL_MIN=2
AUDIFI_DB_POOL_MAX=10

# Optional: Read replica for analytics queries
# AUDIFI_DATABASE_REPLICA_URL=

# =================================================
# REDIS (Optional - for caching)
# =================================================

# AUDIFI_REDIS_URL=redis://localhost:6379

# =================================================
# BLOCKCHAIN CONFIGURATION
# =================================================

# Ethereum RPC URL (for blockchain indexing)
# AUDIFI_ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Solana RPC URL
# AUDIFI_SOL_RPC_URL=https://api.mainnet-beta.solana.com

# =================================================
# STRIPE CONFIGURATION
# =================================================

# Stripe secret key (for subscriptions)
# STRIPE_SECRET_KEY=sk_test_...

# Stripe webhook secret
# STRIPE_WEBHOOK_SECRET=whsec_...

# =================================================
# APPLICATION SETTINGS
# =================================================

# Node environment
NODE_ENV=development

# Application port
PORT=5173

# =================================================
# API CONFIGURATION
# =================================================

# API URL for backend (production: https://api.audifi.io)
API_URL=http://localhost:3001
