# AudiFi Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit .env files to version control

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# =============================================================================
# Database
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://audifi:CHANGE_ME@localhost:5432/audifi

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://:CHANGE_ME@localhost:6379

# =============================================================================
# Authentication
# =============================================================================
# JWT secret for signing tokens (min 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_A_SECURE_256_BIT_RANDOM_STRING

# Magic link secret for token generation
# Generate with: openssl rand -base64 32
MAGIC_LINK_SECRET=CHANGE_ME_GENERATE_A_SECURE_256_BIT_RANDOM_STRING

# Session cookie secret
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_GENERATE_A_SECURE_256_BIT_RANDOM_STRING

# =============================================================================
# OAuth Providers (Optional)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# Payment Processing
# =============================================================================
# Stripe API keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# =============================================================================
# Email Service
# =============================================================================
# SendGrid API key
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.CHANGE_ME

# Email sender address
EMAIL_FROM=noreply@audifi.io

# =============================================================================
# Web3 / Blockchain
# =============================================================================
# Ethereum RPC provider URL
# Examples: Alchemy, Infura, QuickNode
WEB3_PROVIDER_URL=https://eth-mainnet.g.alchemy.com/v2/CHANGE_ME

# Contract addresses (mainnet or testnet)
CONTRACT_MASTER_NFT_ADDRESS=0x0000000000000000000000000000000000000000
CONTRACT_DIVIDEND_ADDRESS=0x0000000000000000000000000000000000000000
CONTRACT_ARTIST_COIN_ADDRESS=0x0000000000000000000000000000000000000000

# Private key for automated transactions (NEVER commit real keys)
# SECURITY: In production, use a secure secret management service:
# - AWS KMS (Key Management Service)
# - HashiCorp Vault
# - Google Cloud Secret Manager
# - Azure Key Vault
# Never store private keys in environment variables on production servers.
# SIGNER_PRIVATE_KEY=

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Wazuh agent configuration
WAZUH_MANAGER_IP=
WAZUH_AGENT_KEY=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_2FA_REQUIREMENT=true
ENABLE_MAGIC_LINKS=true
ENABLE_SSO=false
ENABLE_STAKING=false

# =============================================================================
# Rate Limiting
# =============================================================================
# Requests per minute for general API
RATE_LIMIT_API=100

# Requests per minute for auth endpoints
RATE_LIMIT_AUTH=10

# =============================================================================
# Development Only
# =============================================================================
# Enable debug logging (never in production)
DEBUG=false

# Skip email sending in development
SKIP_EMAIL=true

# Use mock blockchain in development
USE_MOCK_BLOCKCHAIN=true
